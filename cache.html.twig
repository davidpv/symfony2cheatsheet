    $articleDate = new \DateTime($article-&gt;getUpdatedAt());
    $authorDate = new \DateTime($author-&gt;getUpdatedAt());

    $date = $authorDate &gt; $articleDate ? $authorDate : $articleDate;

    $response-&gt;setLastModified($date);
